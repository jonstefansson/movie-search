<div class="container">

  <p id="notice"><%= notice %></p>

  <h1>Movies</h1>

  <table class="table table-sm">
    <thead class="thead-default">
    <tr>
      <th>Title</th>
      <th>Release Date</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @documents.each do |document| %>
        <tr>
          <td><%= document.title %></td>
          <td><%= document.release_date %></td>
          <td><%= link_to 'Show', document_path(document.id) %></td>
          <td><%= link_to 'Edit', edit_document_path(document.id) %></td>
          <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to('New Movie', new_document_path, html_options = {class: 'btn btn-primary'}) %>

</div>
